<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="org.NoteListController" styleClass="note-list-root" spacing="10">
   <padding>
      <Insets top="15" right="15" bottom="15" left="15"/>
   </padding>
   
   <children>
      <!-- Tiêu đề lớn & Button thêm mới -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <children>
            <Label text="NoTeThing" styleClass="list-title"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button text=" Ghi chú mới" onAction="#createNewNote" styleClass="primary-button">
               <graphic>
                  <FontIcon iconLiteral="bi-plus" iconSize="16" />
               </graphic>
            </Button>
         </children>
      </HBox>
      
      <!-- Placeholder nếu danh sách trống (Optional - để làm sau) -->
      
      <!-- Note List -->
      <ListView fx:id="noteListView" VBox.vgrow="ALWAYS" styleClass="note-list"/>
   </children>
</VBox>
